<?xml version="1.0" encoding="UTF-8"?><beans xmlns="http://www.springframework.org/schema/beans"       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"       xsi:schemaLocation="           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">    <!-- cacheManager工厂类 -->    <bean id="cacheManagerFactory" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean"          p:configLocation="classpath:config/ehcache.xml" p:shared="true"/>    <bean id="userCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">        <property name="cacheManager" ref="cacheManagerFactory"/>        <property name="cacheName" value="userCache"/>    </bean>    <bean id="systemCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">        <property name="cacheManager" ref="cacheManagerFactory"/>        <property name="cacheName" value="systemCache"/>    </bean>    <bean id="pageCacheCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean" scope="singleton">        <property name="cacheManager" ref="cacheManagerFactory"/>        <property name="cacheName" value="SimplePageCachingFilter"/>    </bean>    <bean id="cacheService" class="com.isoftstone.demo.cache.service.impl.CacheServiceImpl" scope="singleton">        <property name="cache">            <ref local="systemCache"/>        </property>    </bean>    <bean id="userCacheService" class="com.isoftstone.demo.cache.service.impl.CacheServiceImpl" scope="singleton">        <property name="cache">            <ref local="userCache"/>        </property>    </bean></beans>